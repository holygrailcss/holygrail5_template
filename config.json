{
  "prefix": "hg",
  "category": "dutti",
  "fontFamilyMap": {
    "primary": "Georgia, 'Times New Roman', serif",
    "secondary": "Arial, sans-serif"
  },
  "breakpoints": {
    "mobile": "1px",
    "desktop": "992px"
