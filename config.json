{
  "prefix": "hg",
  "category": "typo",
  "fontFamilyMap": {
    "primary": "arial, sans-serif",
    "secondary": "\"ms-serif\", serif"
  },
  "breakpoints": {
    "mobile": "1px",
    "desktop": "992px"
  },
  "spacingMap": {
    "0": "0",
    "4": "4px",
    "8": "8px",
    "12": "12px",
    "16": "16px",
    "20": "20px",
    "24": "24px",
    "32": "32px",
    "36": "36px",
    "40": "40px",
    "64": "64px",


    "120": "120px",

    "20-percent": "20%",
    "50-percent": "50%",
    "75-percent": "75%",
    "100-percent": "100%"
  },
  "spacingImportant": [
    "0"
  ],
  "grid": {
    "enabled": true,
    "gutter": "8px",
    "breakpoints": {
      "xs": "1px",
      "sm": "768px",
      "md": "992px",
      "lg": "1280px",
      "xl": "1440px"
    },
    "columnsXs": 12,
    "columnsXl": 12
  },
  "colors": {
    "white": "#ffffff",
    "black": "#1a1a1a",
    "dark-grey": "#4a4a4a",
    "middle-grey": "#8b7355",
    "light-grey": "#f5f5f5",
    "primary": "#1a1a1a",
    "error": "#c41e3a",
    "info": "#2c5f7c",
    "success": "#7c9473",
    "warning": "#d4af37",
    "feel": "#d4af37",
    "feel-dark": "#8b7355",
    "special": "#b99d6b",
    "bg-light": "#f5f5f5",
    "c-bg-light": "#1a1a1a",
    "sk-grey": "#e8e8e8",
    "bg-cream": "#faf8f3",
    "text": "#1a1a1a"
  },
  "themeVariables": {
    "buttons": {
      "primary": {
        "bg": "var(--hg-color-primary)",
        "color": "var(--hg-color-white)",
        "hoverBg": "var(--hg-color-dark-grey)"
      },
      "secondary": {
        "bg": "var(--hg-color-dark-grey)",
        "color": "var(--hg-color-white)",
        "hoverBg": "var(--hg-color-middle-grey)"
      },
      "outline": {
        "border": "var(--hg-color-primary)",
        "color": "var(--hg-color-primary)",
        "hoverBg": "var(--hg-color-primary)",
        "hoverColor": "var(--hg-color-white)"
      },
      "ghost": {
        "color": "var(--hg-color-primary)",
        "hoverBg": "var(--hg-color-light-grey)"
      },
      "feel": {
        "bg": "var(--hg-color-feel)",
        "color": "var(--hg-color-white)",
        "hoverBg": "var(--hg-color-feel-dark)"
      },
      "padding": {
        "sm": {
          "x": "var(--hg-spacing-12)",
          "y": "var(--hg-spacing-8)"
        },
        "md": {
          "x": "var(--hg-spacing-16)",
          "y": "var(--hg-spacing-12)"
        },
        "lg": {
          "x": "var(--hg-spacing-24)",
          "y": "var(--hg-spacing-16)"
        }
      }
    },
    "forms": {
      "input": {
        "border": "var(--hg-color-middle-grey)",
        "borderFocus": "var(--hg-color-primary)",
        "bg": "var(--hg-color-white)",
        "color": "var(--hg-color-primary)",
        "placeholder": "var(--hg-color-middle-grey)",
        "padding": {
          "x": "var(--hg-spacing-16)",
          "y": "var(--hg-spacing-12)"
        },
        "gap": "var(--hg-spacing-8)",
        "errorBorder": "var(--hg-color-error)",
        "successBorder": "var(--hg-color-success)",
        "warningBorder": "var(--hg-color-warning)"
      },
      "label": {
        "color": "var(--hg-color-primary)",
        "required": "var(--hg-color-error)"
      },
      "checkbox": {
        "bg": "var(--hg-color-white)",
        "border": "var(--hg-color-middle-grey)",
        "checkedBg": "var(--hg-color-primary)",
        "checkedBorder": "var(--hg-color-primary)"
      },
      "radio": {
        "bg": "var(--hg-color-white)",
        "border": "var(--hg-color-middle-grey)",
        "checkedBg": "var(--hg-color-primary)",
        "checkedBorder": "var(--hg-color-primary)"
      },
      "switch": {
        "bg": "var(--hg-color-middle-grey)",
        "activeBg": "var(--hg-color-primary)",
        "thumb": "var(--hg-color-white)"
      },
      "groupGap": "var(--hg-spacing-16)"
    },
    "typography": {
      "fontFamily": "var(--hg-typo-font-family-primary)",
      "fontSize": {
        "base": "var(--hg-typo-font-size-13)",
        "sm": "var(--hg-typo-font-size-12)",
        "lg": "var(--hg-typo-font-size-14)"
      },
      "fontWeight": {
        "normal": "var(--hg-typo-font-weight-400)",
        "bold": "var(--hg-typo-font-weight-700)"
      },
      "lineHeight": "var(--hg-typo-line-height-1-5)"
    },
    "borders": {
      "radius": "0",
      "width": "1px",
      "style": "solid"
    },
    "transitions": {
      "default": "all 0.2s ease"
    }
  },
  "classes": {
    "h2": {
      "fontFamily": "arial, sans-serif",
      "fontWeight": "900",
      "letterSpacing": "0rem",
      "textTransform": "none",
      "mobile": {
        "fontSize": "18px",
        "lineHeight": "1.976"
      },
      "desktop": {
        "fontSize": "24px",
        "lineHeight": "1.2"
      }
    },
    "title-l-b": {
      "fontFamily": "arial, sans-serif",
      "fontWeight": "700",
      "letterSpacing": "0rem",
      "textTransform": "uppercase",
      "mobile": {
        "fontSize": "14px",
        "lineHeight": "1.2"
      },
      "desktop": {
        "fontSize": "14px",
        "lineHeight": "1.4"
      }
    },
    "title-s": {
      "fontFamily": "arial, sans-serif",
      "fontWeight": "400",
      "mobile": {
        "fontSize": "12px",
        "lineHeight": "1.4"
      },
      "desktop": {
        "fontSize": "12px",
        "lineHeight": "1.4"
      }
    },
    "suisse-1": {
      "fontFamily": "\"ms-serif\", serif",
      "mobile": {
        "fontSize": "16px",
        "lineHeight": "1.5"
      },
      "desktop": {
        "fontSize": "20px",
        "lineHeight": "1.5"
      }
    },
    "suisse-2": {
      "fontFamily": "\"ms-serif\", serif",
      "mobile": {
        "fontSize": "13px",
        "lineHeight": "1.1"
      },
      "desktop": {
        "fontSize": "14px",
        "lineHeight": "1.1"
      }
    },
    "suisse-body": {
      "fontFamily": "\"ms-serif\", serif",
      "mobile": {
        "fontSize": "10px",
        "lineHeight": "1.1"
      },
      "desktop": {
        "fontSize": "12px",
        "lineHeight": "1.1"
      }
    },
    "p-tag": {
      "fontFamily": "arial, sans-serif",
      "fontWeight": "100",
      "mobile": {
        "fontSize": "8px",
        "lineHeight": "1"
      },
      "desktop": {
        "fontSize": "8px",
        "lineHeight": "1"
      }
    },
    "semantic": {
      "fontFamily": "arial, sans-serif",
      "fontWeight": "100",
      "mobile": {
        "fontSize": "13px",
        "lineHeight": "1"
      },
      "desktop": {
        "fontSize": "13px",
        "lineHeight": "1"
      }
    },
    "title-l": {
      "fontFamily": "arial, sans-serif",
      "fontWeight": "100",
      "mobile": {
        "fontSize": "14px",
        "lineHeight": "1.4"
      },
      "desktop": {
        "fontSize": "14px",
        "lineHeight": "1.4"
      }
    },
    "title-m": {
      "fontFamily": "arial, sans-serif",
      "fontWeight": "100",
      "mobile": {
        "fontSize": "12px",
        "lineHeight": "1.4"
      },
      "desktop": {
        "fontSize": "12px",
        "lineHeight": "1.4"
      }
    },
    "text-m": {
      "fontFamily": "arial, sans-serif",
      "fontWeight": "100",
      "mobile": {
        "fontSize": "12px",
        "lineHeight": "1.5"
      },
      "desktop": {
        "fontSize": "13px",
        "lineHeight": "1.5"
      }
    },
    "text-l": {
      "fontFamily": "arial, sans-serif",
      "fontWeight": "100",
      "mobile": {
        "fontSize": "12px",
        "lineHeight": "1.5"
      },
      "desktop": {
        "fontSize": "12px",
        "lineHeight": "1.5"
      }
    }
  },

  "helpers": {
    "display": {
      "property": "display",
      "class": "d",
      "responsive": true,
      "description": "Tipo de caja de renderizado",
      "values": [
        "contents",
        "inline",
        "inline-block",
        "block",
        "flex",
        "inline-flex",
        "none"
      ]
    },
    "flex-direction": {
      "property": "flex-direction",
      "class": "flex",
      "responsive": true,
      "description": "Dirección del eje principal (horizontal o vertical)",
      "values": {
        "row": "row",
        "column": "column"
      }
    },
    "flex-wrap": {
      "property": "flex-wrap",
      "class": "flex",
      "responsive": true,
      "description": "Permite o no el ajuste en múltiples líneas",
      "values": {
        "nowrap": "nowrap",
        "wrap": "wrap"
      }
    },
    "flex-grow": {
      "property": "flex-grow",
      "class": "grow",
      "responsive": true,
      "description": "Capacidad de crecer para ocupar espacio disponible",
      "values": {
        "0": "0",
        "1": "1",
        "2": "2",
        "3": "3",
        "auto": "auto"
      }
    },
    "flex-shrink": {
      "property": "flex-shrink",
      "class": "shrink",
      "responsive": true,
      "description": "Capacidad de encogerse cuando el espacio es limitado",
      "values": {
        "0": "0",
        "1": "1",
        "2": "2",
        "3": "3",
        "auto": "auto"
      }
    },
    "order": {
      "property": "order",
      "class": "order",
      "responsive": true,
      "description": "Orden de visualización independiente del HTML",
      "values": {
        "0": "0",
        "1": "1",
        "2": "2",
        "3": "3",
        "3-neg": "-3",
        "2-neg": "-2",
        "1-neg": "-1",
        "first": "-9999",
        "last": "9999"
      }
    },
    "justify-content": {
      "property": "justify-content",
      "class": "justify",
      "responsive": true,
      "description": "Alineación en el eje principal",
      "values": {
        "stretch": "stretch",
        "start": "flex-start",
        "end": "flex-end",
        "center": "center",
        "between": "space-between",
        "around": "space-around",
        "evenly": "space-evenly"
      }
    },
    "justify-items": {
      "property": "justify-items",
      "class": "justify-items",
      "responsive": true,
      "description": "Alineación horizontal en grid",
      "values": {
        "stretch": "stretch",
        "start": "flex-start",
        "end": "flex-end",
        "center": "center",
        "between": "space-between",
        "around": "space-around",
        "evenly": "space-evenly"
      }
    },
    "align-content": {
      "property": "align-content",
      "class": "content",
      "responsive": true,
      "description": "Alineación de líneas en el eje cruzado",
      "values": {
        "stretch": "stretch",
        "start": "flex-start",
        "end": "flex-end",
        "center": "center",
        "between": "space-between",
        "around": "space-around",
        "evenly": "space-evenly"
      }
    },
    "align-items": {
      "property": "align-items",
      "class": "items",
      "responsive": true,
      "description": "Alineación en el eje cruzado",
      "values": {
        "stretch": "stretch",
        "start": "flex-start",
        "end": "flex-end",
        "center": "center",
        "baseline": "baseline"
      }
    },
    "row-gap": {
      "property": "row-gap",
      "class": "gap-y",
      "responsive": true,
      "description": "Espacio entre filas",
      "useSpacing": true
    },
    "column-gap": {
      "property": "column-gap",
      "class": "gap-x",
      "responsive": true,
      "description": "Espacio entre columnas",
      "useSpacing": true
    },
    "gap": {
      "property": "gap",
      "class": "gap",
      "responsive": true,
      "description": "Espacio entre filas y columnas",
      "useSpacing": true
    }
  }

}