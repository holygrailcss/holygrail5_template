  "grid": {
    "enabled": true,
    "gutter": "8px",
    "breakpoints": {
      "xs": "1px",
      "sm": "768px",
      "md": "992px",
      "lg": "1280px",
      "xl": "1440px"
    },
    "columnsXs": 12,
    "columnsXl": 12
