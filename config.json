  "colors": {
    "white": "#ffffff",
    "black": "#1a1a1a",
    "dark-grey": "#4a4a4a",
    "middle-grey": "#8b7355",
    "light-grey": "#f5f5f5",
    "primary": "#1a1a1a",
    "error": "#c41e3a",
    "info": "#2c5f7c",
    "success": "#7c9473",
    "warning": "#d4af37",
    "feel": "#d4af37",
    "feel-dark": "#8b7355",
    "special": "#b99d6b",
    "bg-light": "#f5f5f5",
    "c-bg-light": "#1a1a1a",
    "sk-grey": "#e8e8e8",
    "bg-cream": "#faf8f3",
    "text": "#1a1a1a"
