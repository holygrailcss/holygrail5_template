{
  "prefix": "hg",
  "category": "typo",
  "fontFamilyMap": {
    "primary": "arial, sans-serif",
    "secondary": "\"ms-serif\", serif"
  },
  "breakpoints": {
    "mobile": "1px",
    "desktop": "992px"
  },
  "spacingMap": {
    "0": "0",
    "4": "4px",
    "8": "8px",
    "12": "12px",
    "16": "16px",
    "20": "20px",
    "24": "24px",
    "32": "32px",
    "36": "36px",
    "40": "40px",
    "64": "64px",


    "120": "120px",

    "20-percent": "20%",
    "50-percent": "50%",
    "75-percent": "75%",
    "100-percent": "100%"
